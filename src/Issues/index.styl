.issueBox
  padding: 25px
  
  .issueList
    width: 70%
    min-width: 600px
    centerHorizontal()
    
    .issue
      position: relative
      margin: 25px
      padding: 15px
      
      .topbar
        padding: 10px
        background-color: #000000
        
        a
          color: #ffffff
      
      .avatar
        height: 75px
        width: 75px
        position: absolute
        top: -5px
        border-radius: 20px
        right: 0
        z-index: 2
      
      .username
        position: absolute
        right: 90px
        top: 25px
        
        a
          color: white;
      
      .title
        padding: 25px
        outline-width: 1px
        outline-style: double
        width: 98%
        z-index: 1
        centerHorizontal()
